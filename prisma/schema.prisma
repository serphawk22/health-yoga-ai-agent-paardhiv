generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String              @id @default(cuid())
  email           String              @unique
  password        String
  name            String
  role            Role                @default(PATIENT)
  avatar          String?
  preferences     Json?               @default("{}")
  emailVerified   DateTime?
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  appointments    Appointment[]
  chatHistory     ChatHistory[]
  doctorProfile   Doctor?
  doctorChats     DoctorPatientChat[]
  healthMetrics   HealthMetrics[]
  healthProfile   HealthProfile?
  notifications   Notification[]
  orders          Order[]             @relation("BuyerOrders")
  products        Product[]           @relation("SellerProducts")
  recommendations Recommendation[]
  sessions        Session[]
  workoutSessions WorkoutSession[]

  @@index([email])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

model HealthProfile {
  id                 String              @id @default(cuid())
  userId             String              @unique
  dateOfBirth        DateTime?
  age                Int?
  gender             Gender?
  height             Float?
  weight             Float?
  bloodType          String?
  existingConditions String[]
  allergies          String[]
  medications        String[]
  injuries           String[]
  dietPreference     DietPreference?
  activityLevel      ActivityLevel?
  sleepQuality       SleepQuality?
  stressLevel        StressLevel?
  smokingStatus      SmokingStatus?
  alcoholConsumption AlcoholConsumption?
  primaryGoal        HealthGoal?
  secondaryGoals     HealthGoal[]
  targetWeight       Float?
  bmiScore           Float?
  activityScore      Float?
  sleepScore         Float?
  stressScore        Float?
  overallHealthScore Float?
  isComplete         Boolean             @default(false)
  completionStep     Int                 @default(0)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Product {
  id          String      @id @default(cuid())
  sellerId    String
  title       String
  description String
  price       Float
  images      String[]
  category    String
  stock       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
  seller      User        @relation("SellerProducts", fields: [sellerId], references: [id], onDelete: Cascade)

  @@index([sellerId])
  @@index([category])
}

model Order {
  id          String      @id @default(cuid())
  buyerId     String
  totalAmount Float
  status      String      @default("PENDING")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  buyer       User        @relation("BuyerOrders", fields: [buyerId], references: [id], onDelete: Cascade)
  items       OrderItem[]

  @@index([buyerId])
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Float
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

model HealthMetrics {
  id                     String     @id @default(cuid())
  userId                 String
  date                   DateTime   @default(now())
  weight                 Float?
  bloodPressureSystolic  Int?
  bloodPressureDiastolic Int?
  heartRate              Int?
  bloodSugar             Float?
  sleepHours             Float?
  waterIntake            Float?
  stepsCount             Int?
  caloriesBurned         Int?
  caloriesConsumed       Int?
  mood                   MoodLevel?
  notes                  String?
  createdAt              DateTime   @default(now())
  user                   User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

model Doctor {
  id              String               @id @default(cuid())
  userId          String?              @unique
  name            String
  email           String               @unique
  phone           String?
  specialization  String
  qualification   String
  experience      Int
  consultationFee Float
  avatar          String?
  bio             String?
  rating          Float                @default(0)
  reviewCount     Int                  @default(0)
  isActive        Boolean              @default(true)
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt
  appointments    Appointment[]
  user            User?                @relation(fields: [userId], references: [id])
  availability    DoctorAvailability[]
  patientChats    DoctorPatientChat[]

  @@index([specialization])
}

model DoctorAvailability {
  id           String  @id @default(cuid())
  doctorId     String
  dayOfWeek    Int
  startTime    String
  endTime      String
  slotDuration Int     @default(30)
  isActive     Boolean @default(true)
  doctor       Doctor  @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@unique([doctorId, dayOfWeek, startTime])
  @@index([doctorId])
}

model Appointment {
  id              String            @id @default(cuid())
  userId          String
  doctorId        String
  scheduledDate   DateTime
  scheduledTime   String
  duration        Int               @default(30)
  status          AppointmentStatus @default(PENDING)
  type            AppointmentType   @default(CONSULTATION)
  reason          String?
  symptoms        String[]
  notes           String?
  originalQuery   String?
  extractedIntent String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  meetingId       String?           @unique
  doctor          Doctor            @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([doctorId, scheduledDate, scheduledTime])
  @@index([userId])
  @@index([doctorId, scheduledDate])
}

model ChatHistory {
  id        String   @id @default(cuid())
  userId    String
  sessionId String
  role      ChatRole
  content   String
  metadata  Json?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, sessionId])
  @@index([createdAt])
}

model Recommendation {
  id               String                  @id @default(cuid())
  userId           String
  type             RecommendationType
  category         String?
  title            String
  content          Json
  basedOnProfile   Boolean                 @default(true)
  basedOnGoal      HealthGoal?
  basedOnCondition String?
  bodyPart         String?
  validFrom        DateTime                @default(now())
  validUntil       DateTime?
  isActive         Boolean                 @default(true)
  isFavorite       Boolean                 @default(false)
  isCompleted      Boolean                 @default(false)
  feedback         RecommendationFeedback?
  createdAt        DateTime                @default(now())
  updatedAt        DateTime                @updatedAt
  user             User                    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type])
  @@index([userId, isActive])
}

model WorkoutSession {
  id           String          @id @default(cuid())
  userId       String
  activityType ActivityType
  duration     Int
  calories     Int?
  title        String
  exercises    Json?
  difficulty   IntensityLevel?
  feeling      MoodLevel?
  notes        String?
  completedAt  DateTime        @default(now())
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  user         User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, completedAt])
}

model DoctorPatientChat {
  id        String   @id @default(cuid())
  doctorId  String
  patientId String
  senderId  String
  content   String
  isRead    Boolean  @default(false)
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  doctor    Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  patient   User     @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@index([doctorId, patientId])
  @@index([createdAt])
}

model Notification {
  id           String           @id @default(cuid())
  userId       String
  title        String
  message      String
  type         NotificationType
  isRead       Boolean          @default(false)
  resourceId   String?
  resourceType String?
  createdAt    DateTime         @default(now())
  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@index([createdAt])
}

enum Role {
  PATIENT
  DOCTOR
  YOGA_INSTRUCTOR
}

enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum DietPreference {
  VEGETARIAN
  NON_VEGETARIAN
  VEGAN
  EGGETARIAN
  PESCATARIAN
  FLEXITARIAN
}

enum ActivityLevel {
  SEDENTARY
  LIGHTLY_ACTIVE
  MODERATELY_ACTIVE
  VERY_ACTIVE
  EXTREMELY_ACTIVE
}

enum SleepQuality {
  POOR
  FAIR
  GOOD
  EXCELLENT
}

enum StressLevel {
  LOW
  MODERATE
  HIGH
  VERY_HIGH
}

enum SmokingStatus {
  NEVER
  FORMER
  CURRENT
  OCCASIONAL
}

enum AlcoholConsumption {
  NONE
  OCCASIONAL
  MODERATE
  HEAVY
}

enum HealthGoal {
  WEIGHT_LOSS
  WEIGHT_GAIN
  MUSCLE_BUILDING
  MAINTAIN_WEIGHT
  IMPROVE_FITNESS
  INCREASE_FLEXIBILITY
  STRESS_REDUCTION
  BETTER_SLEEP
  MANAGE_CONDITION
  GENERAL_WELLNESS
  INJURY_RECOVERY
}

enum MoodLevel {
  VERY_LOW
  LOW
  NEUTRAL
  GOOD
  EXCELLENT
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  NO_SHOW
}

enum AppointmentType {
  CONSULTATION
  FOLLOW_UP
  CHECKUP
  EMERGENCY
  TELECONSULTATION
}

enum ChatRole {
  USER
  ASSISTANT
  SYSTEM
}

enum RecommendationType {
  DIET
  EXERCISE
  YOGA
  LIFESTYLE
  DISEASE_MANAGEMENT
  GOAL_BASED
  WEEKLY_PLAN
}

enum RecommendationFeedback {
  HELPFUL
  NOT_HELPFUL
  TOO_EASY
  TOO_HARD
  IRRELEVANT
}

enum ActivityType {
  YOGA
  EXERCISE
  OTHER
}

enum IntensityLevel {
  LOW
  MODERATE
  HIGH
  VERY_HIGH
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
  CHAT_MESSAGE
  APPOINTMENT_UPDATE
}
